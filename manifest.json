{
  "manifest_version": 3,
  "name": "Better Browse",
  "version": "2.6",
  "description": "Enhance your browsing experience with Focus, Dark, Reader modes, Element Zapper, Read Later, Web Notes, Highlights, AI Summary, and Clipboard History.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus",
    "sidePanel",
    "unlimitedStorage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["clipboard-manager.js", "highlighter.js", "summarizer.js", "notes-manager.js", "content.js"],
      "css": ["content.css", "highlighter.css"]
    }
  ]
}