{
  "manifest_version": 3,
  "name": "Better Browse",
  "version": "1.5",
  "description": "Enhance your browsing experience with Focus, Dark, Reader modes, Element Zapper, and Read Later.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}